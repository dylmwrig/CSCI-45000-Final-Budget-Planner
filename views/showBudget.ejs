<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= budget.name %></div>
        <div class="ui top attached">
            <div class="item">
                <div class="name">
                    <p><span>Name: &nbsp;</span><%= budget.name %></p>
                </div>
                <div class="amountConstraint">
                    <p><span>Total Amount Constraint: &nbsp;$</span><%= budget.amountConstraint %></p>
                </div>
                <div class="startDate">
                    <span>Start Date: <%= budget.startDate.toDateString() %></span>
                </div>
                <div class="endDate">
                    <span>End Date: <%= budget.endDate.toDateString() %></span>
                </div>
                <a class="ui yellow basic button" href="/budgets/<%=budget._id%>/edit">Edit</a>
                <form id="delete" action="/budgets/<%=budget._id%>?_method=DELETE" method="POST">
                    <button class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>
