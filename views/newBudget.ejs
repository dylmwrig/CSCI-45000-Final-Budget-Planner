<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Budget</div>
        <form class="ui form" action="/budgets/new" method="POST">
                <div class="field">
                    <label>Budget Name</label>
                    <input required type="text" name="budget[name]" placeholder="Budget Name">
                </div>
                <div class="field">
                    <label>Amount Constraint</label>
                    <input required type="number" name="budget[amountConstraint]" placeholder="How much can you spend">
                </div>

                <% 
                    var sd = new Date();
                    var sdString = sd.toISOString().split('T')[0];
                    var ed = new Date();
                    ed.setDate(ed.getDate()+1);
                    var edString = ed.toISOString().split('T')[0];
                  %>
                <div class="field">
                    <label>Start Date</label>
                    <input required type="date" name="budget[startDate]" placeholder="Start date" value="<%=sdString%>">
                </div>
                <div class="field">
                    <label>End Date</label>
                    <input required type="date" name="budget[endDate]" placeholder="End date" value="<%=edString%>">
                </div>
               
               <div id="fixedTransContainer"> 
                   <p> <strong>Add the necessary transactions that you MUST incur during the budget period (eg:rent). We will
                       show you how much you're left with after!</strong>
                   </p>
                   <button type="button" id="FTbut" class="ui green button fixedTrans">Add Fixed Transaction</button>
                </div>
                <input class="ui button" id="budgetSubmit" type="submit">
        </form>
</div>

<% include ./partials/footer %>
