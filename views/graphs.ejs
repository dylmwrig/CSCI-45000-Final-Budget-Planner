<% include ./partials/header %>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

<div class="ui main text container segment">
    <div class="ui huge header">Spending History</div>
        <div>
            <canvas id="transactionChart" width="400" height="400"></canvas>
            <div class="options">
                <button id="dateViewBtn" class="ui floated basic violet button">
                    View by Date
                    <i class="right chevron icon"></i>
                </button>
                <button id="catViewBtn" class="ui floated basic violet button">
                    View by Category
                    <i class="right chevron icon"></i>
                </button>
                <button id="completeViewBtn" class="ui floated basic violet button">
                    View total spending
                    <i class="right chevron icon"></i>
                </button>
            </div>
        </div>
    </div>

    <script>
        function makeChart(values, labels){
            var ctx = document.getElementById('transactionChart');
            let lineChart = new Chart(ctx, {
                type: 'line',
                fill: false,
                data: {
                labels: labels,
                datasets: [{
                    label: 'Spending History',
                    borderColor: 'rgb(255, 0, 100)',
                    data: values
                }]}
            });
        }

        function makeBudgetChart(spendingValues, budgetValues, labels){
            var ctx = document.getElementById('transactionChart');
            let lineChart = new Chart(ctx, {
                type: 'line',
                data: {
                  labels: labels,
                  datasets: [{
                      label: 'Spending History',
                      backgroundColor: 'rgb(255, 0, 100)',
                      borderColor: 'rgb(255, 0, 100)',
                      data: spendingValues},{
                      label: 'Budget',
                      backgroundColor: 'rgb(0, 0, 255)',
                      borderColor: 'rgb(0, 0, 255)',
                      data: budgetValues
                  }]
                },
                options: {
                    scales: {
                      yAxes: [{
                        ticks: {
                          suggestedMax: budgetValues[0] + budgetValues[0] / 4
                        }
                      }]
                    }
                }
            });
        }

        var allTransactions = <%- transactions %>;
        var allBudgets = <%- budgets %>;

        var b = allBudgets[0];
        var amountConstraint = b["amountConstraint"];
        var constraintArr = [];
        var values = [];
        var names = [];
        var dates = [];
        var categories = [];
        var uniqueCategories = [];
        var fullSpending = [];
        var catValues = [0, 0, 0];
        var hasBudget = true;

        if (allBudgets.length == 0){
            hasBudget = false;
        }

        for (var i = 0; i < allTransactions.length; i++){
            values.push(allTransactions[i]["amount"]);
            names.push(allTransactions[i]["name"]);
            monthDate = allTransactions[i]["created"].slice(5,10);
            year = allTransactions[i]["created"].slice(2,4);
            outDate = monthDate.concat('-',year);
            dates.push(outDate);

            //category view stuff
            cat = allTransactions[i]["category"];
            categories.push(cat);
            if (!uniqueCategories.includes(cat)){
                uniqueCategories.push(cat);
            }

            //full view stuff
            if (i == 0){
                fullSpending.push(values[0]);
            } else {
                fullSpending.push(fullSpending[i-1] + values[i]);
            }
            constraintArr.push(amountConstraint);
        }
        makeChart(values, dates);

        for (var i = 0; i < categories.length; i++){
            catValues[uniqueCategories.indexOf(categories[i])] += values[i];
        }

        var dateViewBtn = document.getElementById('dateViewBtn');
        dateViewBtn.addEventListener("click", function(){
            makeChart(values, dates);
        });

        var catViewBtn = document.getElementById('catViewBtn');
        catViewBtn.addEventListener("click", function(){
            makeChart(catValues, uniqueCategories);
        });

        var completeViewBtn = document.getElementById('completeViewBtn');
        completeViewBtn.addEventListener("click", function(){
            if (hasBudget){
                makeBudgetChart(fullSpending, constraintArr, dates);
            } else {
                makeChart(fullSpending, dates);
              }
        });
      </script>

<% include ./partials/footer %>
